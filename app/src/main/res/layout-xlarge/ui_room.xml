<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="46dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="3"
        android:shrinkColumns="1,2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TableRow android:layout_height="wrap_content"
                  android:layout_width="match_parent" android:id="@+id/tableRow1">
            <TextView android:id="@+id/title1"
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_weight="1"
                      android:text="Time slot" android:textColor="#000"
                      android:gravity="center"
                android:textSize="30dp"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <TextView android:id="@+id/title2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Occupancy" android:textColor="#000"
                      android:gravity="center"
                android:textSize="30dp"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <TextView android:id="@+id/title3"
                      android:layout_width="wrap_content"
                      android:layout_height="50dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="Book" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="1dp"></TextView>
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="match_parent" android:id="@+id/tableRow2">
            <TextView android:id="@+id/title11"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="9:00Am to 12:00Am" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <TextView android:id="@+id/title12"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="Avaliable" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <Button android:id="@+id/buttonTitle13"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="25dp"
                      android:text="Book time slot  " android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="1dp"></Button>
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="match_parent" android:id="@+id/tableRow3">
            <TextView android:id="@+id/title21"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="1:00 Pm to 3:00 Pm" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <TextView android:id="@+id/title22"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="Avaliable" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <Button android:id="@+id/buttonTitle23"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="25dp"
                      android:text="Book time slot  " android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="1dp"></Button>
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="match_parent" android:id="@+id/tableRow4">
            <TextView android:id="@+id/title31"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="4:00 Pm to 7:00 Pm" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <TextView android:id="@+id/title32"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="30dp"
                      android:text="Avaliable" android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="5dp"></TextView>

            <Button android:id="@+id/buttonTitle33"
                      android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:layout_weight="1"
                android:textSize="25dp"
                      android:text="Book time slot  " android:textColor="#000"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:paddingRight="1dp"></Button>
        </TableRow>

    </TableLayout>
</LinearLayout>